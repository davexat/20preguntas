<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sistema.JuegoController" stylesheets="@../estilos/juego.css" styleClass="contenedor">
    <children>
        <Label fx:id="pregunta" styleClass="pregunta"/>
        <Region minHeight="250" />
        <HBox styleClass="cajaOpciones">
            <children>
                <HBox styleClass="cajaBotones">
                    <Button fx:id="botonSi" onAction="#respuestaSi" styleClass="botonSi"/>
                </HBox>
                <HBox styleClass="cajaBotones">
                    <Button fx:id="botonNo" onAction="#respuestaNo" styleClass="botonNo"/>
                </HBox>
            </children>
        </HBox>
    </children>
</VBox>
